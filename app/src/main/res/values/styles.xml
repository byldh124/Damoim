<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Splash Activity 전용 -->
    <style name="AppTheme.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/background_01</item>
    </style>

    <!--Splash Activity 제외 다른 Activity -->
    <style name="AppTheme.NoActionBar.Theme.White" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--Splash Activity 제외 다른 Activity -->
    <style name="AppTheme.NoActionBar.Theme.Red" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/red_light01</item>
    </style>

    <!-- 다이얼로그 -->
    <style name="DialogTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- DatePickerDialog -->
    <style name="DatePickerSpin" parent="android:Theme.Material.Dialog">
        <item name="android:datePickerStyle">@style/DatePickerMode</item>
    </style>

    <style name="DatePickerMode" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>


    <!-- TimePickerDialog -->
    <style name="TimePickerSpin" parent="android:Theme.Material.Dialog">
        <item name="android:timePickerStyle">@style/TimePickerMode</item>
    </style>

    <style name="TimePickerMode" parent="android:Widget.Material.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="ToolbarRed">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/red_light01</item>
        <item name="android:theme">@style/ToolbarTheme_Red</item>
    </style>


    <style name="ToolbarWhite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/white</item>
        <item name="android:theme">@style/ToolbarTheme_white</item>
    </style>

    <style name="TitleRed">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red_dark01</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/jalnan</item>
    </style>

    <style name="TitleWhite">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/jalnan</item>
    </style>

    <style name="ButtonRed01">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/jalnan</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">2dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button_red_01</item>
    </style>

    <style name="ButtonGray01">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/jalnan</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">2dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button_gray_01</item>
    </style>

    <style name="TextBgGray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_edit_gray01</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/nanum_square_round_b</item>
        <item name="android:textColor">@color/gray_dark01</item>
        <item name="android:textColorHint">@color/gray_light01</item>
    </style>

    <style name="TextSign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:fontFamily">@font/nanum_square_round_b</item>
        <item name="android:background">@drawable/bg_edit_white01</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/default_text</item>
        <item name="android:textColorHint">@color/gray_dark01</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="RadioButtonGender">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/selector_text_color_radiobutton</item>
    </style>

    <style name="TextTab" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/nanum_square_round_b</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextNav" parent="Widget.Design.NavigationView">
        <item name="android:fontFamily">@font/nanum_square_round_eb</item>
    </style>

    <style name="TextBottomNav" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/nanum_square_round_b</item>
        <item name="android:textSize">12dp</item>
    </style>

</resources>