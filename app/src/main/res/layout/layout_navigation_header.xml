<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="#9FE3D7"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/navigation_header_profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_edit_my_profile"
        android:layout_marginTop="16dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:textSize="14sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/navigation_header_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_default_name"
        android:layout_toEndOf="@id/navigation_header_profile_image"
        android:layout_alignTop="@id/navigation_header_profile_image"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="#ff333333"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/navigation_header_tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile_default_message"
        android:layout_alignStart="@id/navigation_header_tv_name"
        android:layout_below="@id/navigation_header_tv_name"
        android:layout_marginTop="8dp"/>

</RelativeLayout>