<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="HomeActivity"
            type="com.moondroid.project01_meetingapp.ui.view.activity.HomeActivity" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#9FE3D7"
        android:onClick="@{HomeActivity::toProfileActivity}"
        android:padding="16dp">

        <com.moondroid.project01_meetingapp.ui.view.widget.DMRoundView
            android:id="@+id/thumbWrapper"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerVertical="true"
            bind:topLeftCornerRadius="16dp"
            bind:topRightCornerRadius="16dp"
            bind:bottomLeftCornerRadius="16dp"
            bind:bottomRightCornerRadius="16dp">

            <ImageView
                android:id="@+id/navigation_header_profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                bind:image="@{HomeActivity.user.thumb}" />

        </com.moondroid.project01_meetingapp.ui.view.widget.DMRoundView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/profile_edit_my_profile"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/thumbWrapper"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/thumbWrapper"
            android:text="@{HomeActivity.user.name}"
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_alignStart="@id/tvName"
            android:layout_marginTop="8dp"
            android:text="@{HomeActivity.user.message}" />

    </RelativeLayout>
</layout>
