<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="activity"
            type="com.moondroid.project01_meetingapp.ui.view.activity.LocationActivity" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".account.LocationChoiceActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/ToolbarWhite">

            <TextView
                style="@style/TitleRed"
                android:text="@string/title_location_choice" />
        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/red_dark01" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etLocation"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/TextBgGray"
                android:layout_margin="16dp"
                android:hint="@string/hint_input_location"
                android:inputType="text"
                android:privateImeOptions="defaultInputmode=korean" />

            <ImageView
                android:id="@+id/icSearch"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_search"
                android:layout_marginEnd="16dp"/>

        </LinearLayout>



        <com.moondroid.project01_meetingapp.ui.view.widget.DMRecycler
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:orientation="vertical" />

    </LinearLayout>

</layout>