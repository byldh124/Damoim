<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="groupDetail"
            type="com.moondroid.project01_meetingapp.model.GroupInfo" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="6dp"
            android:elevation="4dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:strokeColor="#EFA9B0"
            app:strokeWidth="1dp">

            <RelativeLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.moondroid.project01_meetingapp.ui.view.widget.DMRoundView
                    android:id="@+id/imgWrapper"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    app:bottomLeftCornerRadius="16dp"
                    app:bottomRightCornerRadius="16dp"
                    app:topLeftCornerRadius="16dp"
                    app:topRightCornerRadius="16dp">

                    <ImageView
                        android:id="@+id/titleImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        bind:image="@{groupDetail.titleImgUrl}" />

                </com.moondroid.project01_meetingapp.ui.view.widget.DMRoundView>

                <ImageView
                    android:id="@+id/interestIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignTop="@id/imgWrapper"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@id/imgWrapper"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/txtLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/imgWrapper"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@id/interestIcon"
                    android:text="@{groupDetail.meetLocation}" />

                <TextView
                    android:id="@+id/txtGroupTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/interestIcon"
                    android:layout_alignStart="@id/interestIcon"
                    android:layout_marginTop="8dp"
                    android:text="@{groupDetail.meetName}"
                    android:textColor="#ff333333"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtGroupPurpose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/txtGroupTitle"
                    android:layout_alignStart="@id/interestIcon"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="24dp"
                    android:text="@{groupDetail.purposeMessage}" />
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>


</layout>


