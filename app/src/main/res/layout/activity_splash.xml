<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="activity"
            type="com.moondroid.damoim.ui.view.activity.SplashActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.view.activity.SplashActivity">

        <TextView
            android:id="@+id/logo01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/SPx96"
            android:text="@string/splash_app_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:fontFamily="@font/jalnan"
            android:textColor="@color/red_dark01"
            app:layout_constraintVertical_bias="0.44"/>

        <TextView
            android:id="@+id/logo02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/SPx48"
            android:text="@string/splash_app_sub_title"
            android:fontFamily="@font/jalnan"
            app:layout_constraintTop_toBottomOf="@id/logo01"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/red_dark01"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/ic_kotlin_logo"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintDimensionRatio="486:108"
            android:layout_marginBottom="@dimen/DPx48"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>



