<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:requiresSmallestWidthDp="320"
        android:resizeable="false"
        android:smallScreens="false"
        android:xlargeScreens="false" /> <!-- Media -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 인터넷 사용 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 위치 정보 관련 -->
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" /> <!-- 위치 정보 관련 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- 위치 정보 관련 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> <!-- 위치 정보 관련 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" /> <!-- FCM -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <queries>
        <package android:name="com.kakao.talk" />
    </queries>

    <application
        android:name=".application.DMApp"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.Project01_MeetingApp"
        android:usesCleartextTraffic="true"
        tools:ignore="DataExtractionRules"
        tools:targetApi="s">

        <activity
            android:name=".presentation.view.activity.MoimInfoActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar.Theme.Red" />
        <activity
            android:name=".presentation.view.activity.ProfileActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar.Theme.Red" />
        <activity
            android:name=".presentation.view.moim.MoimActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar.Theme.Red" />
        <activity
            android:name=".presentation.view.activity.GroupInfoActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar.Theme.Red" />

        <meta-data
            android:name="com.naver.maps.map.CLIENT_ID"
            android:value="csit8ak1h9" />

        <activity
            android:name=".presentation.view.activity.ReportActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar.Theme.Red" />

        <activity
            android:name=".presentation.view.activity.SettingActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar.Theme.Red" />
        <activity
            android:name=".presentation.view.grouplist.GroupListActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar.Theme.Red" />
        <activity
            android:name=".presentation.view.location.LocationActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar.Theme.White" />
        <activity
            android:name=".presentation.view.interest.InterestActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar.Theme.White" />
        <activity
            android:name=".presentation.view.activity.MyInfoActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar.Theme.Red" />
        <activity
            android:name=".presentation.view.signup.SignUpActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar.Theme.Red" />
        <activity
            android:name=".presentation.view.signin.SignInActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar.Theme.Red" />
        <activity
            android:name=".presentation.view.activity.CreateActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar.Theme.Red" /> <!-- Kakao Login Activity -->
        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="oauth"
                    android:scheme="kakaof33663a89ab7e4f6ace89f2ebeade100" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.view.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="moondroid.page"
                    android:path="/link"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.view.home.HomeActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar.Theme.Red" />
        <activity
            android:name=".presentation.view.activity.GroupActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar.Theme.Red" /> <!-- Google FCM Background Service -->
        <service
            android:name=".utils.firebase.DMMessage"
            android:exported="false"
            tools:ignore="Instantiatable">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>