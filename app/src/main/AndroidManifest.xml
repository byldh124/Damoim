<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.moondroid.project01_meetingapp">

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:requiresSmallestWidthDp="320"
        android:resizeable="false"
        android:smallScreens="false"
        android:xlargeScreens="false" /> <!-- Media -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 인터넷 사용 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 위치 정보 관련 -->
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" /> <!-- 위치 정보 관련 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- 위치 정보 관련 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> <!-- 위치 정보 관련 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" /> <!-- FCM -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:name=".application.DMApp"
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.Project01_MeetingApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.view.activity.LocationActivity"
            android:theme="@style/AppTheme.NoActionBar.Theme.White"
            android:exported="false" />
        <activity
            android:name=".ui.view.activity.InterestActivity"
            android:theme="@style/AppTheme.NoActionBar.Theme.White"
            android:exported="false" />
        <activity
            android:name=".ui.view.activity.ProfileActivity"
            android:theme="@style/AppTheme.NoActionBar.Theme.Red"
            android:exported="false" />
        <activity
            android:name=".ui.view.activity.SignUpActivity"
            android:theme="@style/AppTheme.NoActionBar.Theme.Red"
            android:exported="false" />

        <activity
            android:name=".ui.view.activity.SignInActivity"
            android:theme="@style/AppTheme.NoActionBar.Theme.Red"
            android:exported="false" />

        <activity
            android:name=".ui.view.activity.CreateGroupActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar.Theme.Red" />

        <!-- Kakao Login Activity -->
        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="oauth"
                    android:scheme="kakaof33663a89ab7e4f6ace89f2ebeade100" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.view.activity.SplashActivity"
            android:exported="true"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.view.activity.HomeActivity" />
        <activity
            android:name=".ui.view.activity.GroupActivity" />
    </application>

</manifest>